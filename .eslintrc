{
  "env": {
    "node": 1,
    "mocha": 1
  },
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single", "avoid-escape"],
    "block-scoped-var": true,
    "no-redeclare": true,
    "camelcase": [0],
    "no-process-exit": [0],
    "no-underscore-dangle": [0],
    "no-shadow": [0],
    "space-before-blocks": [2, "always"]
  }
}
